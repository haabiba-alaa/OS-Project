unsigned int kheap_physical_address(unsigned int virtual_address) {
    // Check if the address is within the block allocator limit
    if (virtual_address >= start && virtual_address < block_allocator_limit) {
        // Block allocator strategy
        return virtual_address - start + block_allocator_limit;
    } else if (virtual_address >= segment_break && virtual_address < limit) {
    	unsigned int* ptr_PT=NULL;
    	get_page_table(ptr_page_directory,virtual_address,&ptr_PT);
    	return (ptr_PT[PTX(virtual_address)>>12]*PAGE_SIZE);

    } else {
        // No mapping
        return 0;
    }
    return 0;
}
