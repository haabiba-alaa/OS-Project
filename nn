unsigned int kheap_virtual_address(unsigned int physical_address)
{
    uint32 frame_no = physical_address >> 12;
    uint32* ptr_page_table;

    struct FrameInfo* frame_info = get_frame_info(ptr_page_directory, physical_address, &ptr_page_table);

    if (frame_info != NULL) {
        uint32 virtual_address = to_frame_info(physical_address)->va;
        return virtual_address;
    } else {
        return 0;
    }
}
